{
    "name"			: "unit27/twig-gettext-extractor",
    "type"			: "application",
    "description"	: "The Twig Gettext Extractor is Poedit friendly tool which extracts translations from twig templates.",
    "license"		: "MIT",

    "authors": [
        {
            "name"	: "Przemyslaw Ankowski",
            "email"	: "przemyslaw.ankowski@gmail.com"
        }
    ],

    "require": {
        "php":                 ">=5.3.3",
        "twig/twig":           "~1.2",
        "twig/extensions":     "~1.2",
        "symfony/twig-bridge": "~2.7",
        "symfony/routing":     "~2.7",
        "symfony/filesystem":  "~2.7",
        "symfony/translation": "~2.7",
        "symfony/form":        "~2.7"
    },

    "require-dev": {
        "symfony/config":      "~2.7",
        "phpunit/phpunit":     "~4.8"
    },

    "autoload": {
        "psr-0": { "Twig\\Gettext": "." }
    },

    "bin": ["twig-gettext-extractor"],

    "config": {
        "bin-dir": "bin"
    }
}
